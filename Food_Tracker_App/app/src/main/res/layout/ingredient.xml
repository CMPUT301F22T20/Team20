<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textIngredientDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/duru_sans"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="@string/text_ingredient_description"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/expandIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textIngredientExpiry"
            android:text="@string/text_ingredient_expiry"
            android:paddingLeft="15dp"
            style="@style/textViewDimension" />

        <TextView
            android:id="@+id/textIngredientCategory"
            android:text="@string/text_ingredient_category"
            android:paddingLeft="15dp"
            android:layout_below="@id/textIngredientExpiry"
            style="@style/textViewDimension"
             />

        <TextView
            android:id="@+id/textIngredientCost"
            android:text="@string/text_ingredient_cost"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            style="@style/textViewDimension"  />

        <TextView
            android:id="@+id/textIngredientAmount"
            android:text="@string/text_ingredient_amount"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textIngredientCost"
            style="@style/textViewDimension" />

        <TextView
            android:id="@+id/textIngredientLocation"
            android:text="@string/text_ingredient_location"
            android:paddingLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textIngredientCategory"
            style="@style/textViewDimension" />



    </RelativeLayout>

</LinearLayout>