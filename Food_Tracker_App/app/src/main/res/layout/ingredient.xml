<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ingredientDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="Description"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/expand_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ingredientExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ingredientCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_below="@id/ingredientExpiry"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ingredientQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ingredientAmount"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ingredientAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:textSize="16dp" />


    </RelativeLayout>

</LinearLayout>