<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/addIngredientSelectionButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@color/background_dark"
        android:ems="10"
        android:hint="Add Ingredient" />

    <Button
        android:id="@+id/addIngredientLocationSelectionButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@color/background_dark"
        android:ems="10"
        android:hint="Add Ingredient Location" />

    <Button
        android:id="@+id/addIngredientCategorySelectionButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@color/background_dark"
        android:ems="10"
        android:hint="Add Ingredient Category" />
</LinearLayout>