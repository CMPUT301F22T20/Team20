<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    cardView:cardBackgroundColor="@color/background_light"
    cardView:cardCornerRadius="20dp"
    cardView:contentPadding="16dp">

    <RelativeLayout
        android:id="@+id/meal_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/meal_name"
            style="@style/ingredientViewText"
            android:text = "Meal Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_meal_category"
            style="@style/ingredientViewText"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/meal_name"
            android:text="Meal category" />

        <TextView
            android:id="@+id/text_meal_servings"
            style="@style/ingredientViewText"
            android:layout_below="@id/text_meal_category"
            android:text="@string/recipe_servings" />

        <TextView
            android:id="@+id/text_meal"
            style="@style/ingredientViewText"
            android:layout_below="@id/text_meal_servings"
            android:text="Type of Meal" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>