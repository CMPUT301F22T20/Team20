<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text= "Choose the START date for your meal plan"
        android:textColor="@color/primary_dark" />

    <DatePicker
        android:id="@+id/mealPlanStartDate"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:endYear="2100"
        android:startYear="2022" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text= "Choose the END date for your meal plan"
        android:textColor="@color/primary_dark" />

    <DatePicker
        android:id="@+id/mealPlanEndDate"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:endYear="2100"
        android:startYear="2022" />

    <EditText
        android:id="@+id/editTextNumber"
        style = "@style/inputField"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Enter the number of meals"
        android:inputType="number" />


</LinearLayout>