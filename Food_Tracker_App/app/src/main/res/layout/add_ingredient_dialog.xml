<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/ingredientName"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/background_dark"
        android:hint="Name"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/ingredientDescription"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:inputType="text"
        android:background="@color/background_dark"
        android:hint="Description"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/ingredientCost"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:background="@color/background_dark"
        android:hint="Unit Cost"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/ingredientQuantity"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:inputType="number"
        android:background="@color/background_dark"
        android:hint="Quantity"
        android:paddingLeft="10dp" />

    <Spinner
        android:id="@+id/ingredientLocation"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        />

    <Spinner
        android:id="@+id/ingredientCategory"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        />

    <EditText
        android:id="@+id/ingredientDate"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:ems="10"
        android:background="@color/background_dark"
        android:hint="Best Before Date"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="#FF9A84"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="#F4F4F4"
            android:text="ADD" />
    </LinearLayout>


</LinearLayout>