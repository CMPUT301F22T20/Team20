<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAutofill="noExcludeDescendants"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/ingredient_name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientDescription"
            style="@style/inputField"
            android:hint="@string/ingredient_name"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/ingredient_amount"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientQuantity"
            style="@style/inputField"
            android:hint="@string/ingredient_amount"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_dark"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/unit"
            android:textColor="@color/background_light" />

        <Spinner
            android:id="@+id/ingredientUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pick_ingredient_unit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_dark"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/ingredient_category"
            android:textColor="@color/background_light" />

        <Spinner
            android:id="@+id/ingredientCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pick_ingredient_category" />
    </LinearLayout>

</LinearLayout>