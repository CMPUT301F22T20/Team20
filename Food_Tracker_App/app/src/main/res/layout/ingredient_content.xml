<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Ingredient Name"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="72dp"
            tools:layout_conversion_absoluteWidth="253dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

        </TextView>
        <TextView
            android:id="@+id/text_ingredient_expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_name"
            android:padding="20dp"
            android:text="Expiry"
            android:textSize="20sp"
            >
        </TextView>

        <TextView
            android:id="@+id/text_ingredient_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Category"
            android:textSize="20sp"
            android:layout_below="@id/text_ingredient_expiry"
            tools:layout_conversion_absoluteHeight="72dp"
            tools:layout_conversion_absoluteWidth="253dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"></TextView>

        <TextView
            android:id="@+id/text_ingredient_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Location"
            android:textSize="20sp"
            android:layout_below="@id/text_ingredient_category"
            tools:layout_conversion_absoluteHeight="72dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="253dp">
        </TextView>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/expand_ingredient"
            >

            <TextView
                android:id="@+id/text_ingredient_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:padding="20dp"
                android:text="Cost"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:id="@+id/text_ingredient_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="150dp"
                android:padding="10dp"
                android:text="Amount"
                android:textSize="20sp"
                tools:ignore="NotSibling"></TextView>


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
